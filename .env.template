# Unified Employee Onboarding MCP Server - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Anypoint Platform Credentials
ANYPOINT_USERNAME=your_anypoint_username
ANYPOINT_PASSWORD=your_anypoint_password

# Deployment Configuration
ANYPOINT_ENV=Sandbox
MULE_VERSION=4.9.4:2e-java17
APP_NAME=unified-employee-onboarding-mcp

# Database Configuration (CloudHub PostgreSQL)
# Replace with your CloudHub PostgreSQL connection string
DATABASE_URL=jdbc:postgresql://your-db-host:5432/onboarding?user=your_db_user&password=your_db_password

# MCP Server Configuration
MCP_SERVER_NAME=unified-employee-onboarding-server
MCP_SERVER_VERSION=1.0.0

# HTTP Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8081

# Optional: Additional CloudHub Settings
CLOUDHUB_REGION=us-east-1
CLOUDHUB_WORKER_TYPE=MICRO
CLOUDHUB_WORKERS=1
CLOUDHUB_OBJECT_STORE_V2=true

# Security Settings (if needed)
# SSL_KEYSTORE_PATH=
# SSL_KEYSTORE_PASSWORD=
# SSL_TRUSTSTORE_PATH=
# SSL_TRUSTSTORE_PASSWORD=

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# Database Schema Settings
DB_DRIVER_CLASS=org.postgresql.Driver
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Application Metadata
APP_DESCRIPTION=Unified Employee Onboarding MCP Server with PostgreSQL, Assets, and Notifications
APP_VERSION=1.0.0
APP_ENVIRONMENT=sandbox
