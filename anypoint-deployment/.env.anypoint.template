# Anypoint Platform Environment Configuration
# Copy this file to .env.anypoint and fill in your actual values

# Required: Anypoint Platform Credentials
ANYPOINT_ORG_ID=your-org-id-here
ANYPOINT_CLIENT_ID=your-client-id-here
ANYPOINT_CLIENT_SECRET=your-client-secret-here
ANYPOINT_USERNAME=your-username-here
ANYPOINT_PASSWORD=your-password-here

# Optional: Deployment Configuration
ANYPOINT_ENV=Sandbox
CLOUDHUB_REGION=us-east-1
CLOUDHUB_DOMAIN=your-domain-here

# Optional: External Integrations
OPENAI_API_KEY=your-openai-api-key-here
VISUALIZER_DASHBOARD_ID=auto-generated

# Optional: Database Configuration (if using external DB)
POSTGRES_HOST=postgres.sandbox.cloudhub.io
POSTGRES_PORT=5432
POSTGRES_DB=onboarding
POSTGRES_USER=mule
POSTGRES_PASSWORD=your-secure-password-here

# Optional: Monitoring and Alerting
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_NOTIFICATION_ADDRESS=your-email@company.com

# Optional: Security Configuration
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here
